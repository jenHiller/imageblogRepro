{% extends 'base.html.twig' %}

{% block body %}
    <header class="container-fluid">
        <div class="overlay"></div>
        <div class="row">
            <div class="col-12 logo">
                <img class="img-fluid" src="{{ asset('img/logo.png') }}">
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center">
                <div>
                    <h1>imageUniverse</h1>
                    <h3>Be a part of something awesome.</h3>
                    <p>- This is your blog to share and love pictures in diversity!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="search">
                    <div class="input-group">
                        <div class="input-close">
                            <input type="text" class="form-control" placeholder="Search for free photos..." aria-label="Recipient's username" aria-describedby="button-addon3">
                        </div>
                        <div class="input-group-append">
                            <button class="btn" type="button" id="button-addon3"><img src="{{ asset('img/search.png') }}"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="mainpageCarousel" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url({{ asset('img/beautiful-blur-bright-326055.jpg') }})"></div>
            <div class="carousel-item" style="background-image: url({{ asset('img/beautiful-calm-clouds-206359.jpg') }})"></div>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#mainpageCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mainpageCarousel" data-slide-to="1"></li>
        </ol>
    </div>

    <div class="container-fluid image-with-parallax">
        <div class="row">
            <div class="col parallax-container">
                <div class="parallax">
                    <img class="img-fluid" src="{{ asset('img/advent-blur-branch-237180.jpg') }}">
                </div>
            </div>
        </div>
    </div>
{% endblock %}