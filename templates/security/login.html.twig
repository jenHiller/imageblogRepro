{% extends 'base.html.twig' %}

{% block title %}imageUniverse - Login{% endblock %}

{% block body %}
    <div class="container authentification">
        <div class="row">
            <div class="col-12">
                <h3>Login</h3>
            </div>
        </div>
    </div>
    <div class="container centered-box">
        <div class="centered-box-content">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-label" placeholder="E-Mail" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control form-label" placeholder="Passwort" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-primary" type="submit">
                    Login
                </button>
            </form>
        </div>
    </div>
{% endblock %}
