<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}imageUniverse - Home{% endblock %}</title>

        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}" type="image/png" />
        <link rel="icon" href="{{ asset('img/favicon.png') }}" type="image/png" />
    </head>
    <body>

    <header class="main-navigation">
        <div class="logo">
            <a href="/">
                <img class="img-fluid" src="{{ asset('img/logo.png') }}">
            </a>
        </div>

        <div class="burger-navigation">
            <img src="{{ asset('img/burgerbutton.png') }}">
        </div>

        <div class="navi-overlay">
            <div class="close-area"></div>
            <div class="navi">
                <div class="close">
                    <img src="{{ asset('img/closebutton.png') }}">
                </div>
                <div class="list">
                    <ul>
                        <li><a href="/">Home</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                            <li><a href="{{ path('blog') }}">Blog</a></li>
                            <li><a href="{{ path('blog-my-images') }}">Meine Bilder</a></li>
                        {% else %}
                            <li><a href="/login/register">Registrieren</a></li>
                            <li><a href="/login">Login</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>

    </header>

    {% block body %}{% endblock %}

    <footer>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <h4>Kontakt</h4>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-12 col-md-3 d-flex justify-content-center">
                        <p>imageUniverse GmbH<br>Kurf√ºrsten-Anlage 48<br>69115 Heidelberg</p>
                    </div>
                    <div class="col-12 col-md-3 d-flex justify-content-center">
                        <div>
                            <div class="numbers d-flex align-items-center">
                                <img class="icon" src="{{ asset('img/phone.svg') }}">
                                <a href="tel:00496221492110">+49 (0) 6221 49211 0</a>
                            </div>
                            <div class="numbers d-flex align-items-center">
                                <img class="icon" src="{{ asset('img/mail.svg') }}">
                                <a href="mailto:info@myvisuals.de">info@image-universe.de</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3 d-flex justify-content-center">
                        <div>
                            <a href="#">Datenschutz</a><br>
                            <a href="#">Impressum</a>
                        </div>
                    </div>
                    <div class="col-12 col-md-3 d-flex align-items-center">
                        <img class="img-fluid" src="{{ asset('img/logo_white.png') }}">
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/parallax.js') }}"></script>
    <script src="{{ asset('js/fa.min.js') }}"></script>
    <script src="{{ asset('js/init.js') }}"></script>

    {% block javascripts %}{% endblock %}
    </body>
</html>
