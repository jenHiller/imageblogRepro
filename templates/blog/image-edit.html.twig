{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-images">
        <h2>Aktuelles Bild</h2>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="image-placeholder">
                    <img src="/{{ image.path }}" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="textbox">
            <h4>Ersetzte das aktuelle Bild durch das Hochladen eines neuen Bildes.</h4>
        </div>
        <form class="form" id="new_image" method="post" enctype="multipart/form-data">
